{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@useCases/*": ["./src/data/use_cases/*"],
      "@main/*": ["./src/main/*"],
      "@errors/*": ["./src/utils/errors/*"],
      "@utils/*": ["./src/utils/*"],
      "@infra/*": ["./src/infra/*"],
      "@test/*": ["./test/*"]
    }
  }
}
